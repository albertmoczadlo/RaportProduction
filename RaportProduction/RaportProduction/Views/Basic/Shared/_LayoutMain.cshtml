<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RaportProduction</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RaportProduction.UI.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <div class="container-fluid">
                <div class="row">
                    <div class="col-2 ">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img src="~/images/Raport_Production.jpg" alt="strona główna" />
                        </a>
                    </div>
                </div>
                <div class="col-12">
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm  bg-secondary  mt-3 mb-3 main-navbar">
                        <div class="container">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon text-white"></span>
                            </button>
                            <div class="navbar-collapse collapse justify-content-end main-navbar">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>


        </div>
    </header>

    <main>
        @RenderBody()
    </main>


    <footer class="border-top footer text-white bg-secondary">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - RaportProduction - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery.cookie/jquery.cookie.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <div class="privacy-police-info " style="display: none">
        Serwis wykorzystuje pliki cookies. Korzystając ze strony wyrażasz zgodę na
        wykorzystywanie plików cookies.
        <button onclick="closePrivacyPolice()" type="button" class="btn btn-light small mx-3 my-1 privacy-police-btn">Ok</button>
    </div>
    <script>
        $(document).ready(function () {
            if ($.cookie("privacyPolicy") !== "1")
                $(".privacy-police-info").show();
        })

        function closePrivacyPolice() {
            $(".privacy-police-info").hide();
            $.cookie("privacyPolicy", "1", { path: '/', expires: 365 });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
